<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Product</title>
  </head>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/products">View Products</a></li>
        <li><a href="/add-product">Add Product</a></li>
        <!-- Add links for other features if needed -->
      </ul>
    </nav>
  </header>
  <body>
    <header>
      <h1>Add Product</h1>
    </header>
    <div class="container">
      <form
        action="/add-product"
        method="POST"
        onsubmit="return validateForm()"
      >
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required /><br />

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required /><br />

        <label for="price">Price:</label>
        <input
          type="number"
          id="price"
          name="price"
          required
          min="0.01"
          step="0.01"
        /><br />

        <button type="submit">Add Product</button>
      </form>
      <script>
        function showToast(message) {
          var toast = document.getElementById("myToast");
          toast.innerHTML = message;
          toast.className = "show";
          setTimeout(function () {
            toast.className = toast.className.replace("show", "");
          }, 3000);
        }

        function validateForm() {
          // Example: Validate the name field
          var name = document.getElementById("name").value;
          if (name == "") {
            alert("Name must be filled out");
            return false;
          }
          return true;
        }
      </script>

      <a href="/products">Back to Product List</a>
    </div>
  </body>
  <style>
    /* Reset some default styles */

    :root {
      --sage-green: #acc196;
      --amber-red: #ff6b6b;
      --dark-background: #fff;
    }

    body {
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      background-color: var(--dark-background);
      color: #333;
      line-height: 1.6;
      margin: 0;
      padding: 0;
    }

    h1,
    h2,
    h3 {
      margin-bottom: 20px;
    }

    /* Spacing for form elements */
    form input[type="text"],
    form input[type="number"] {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    form button {
      width: 100%;
      background-color: var(--amber-red);
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    form button:hover {
      background-color: var(--sage-green);
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    /* Responsive Design */
    @media screen and (max-width: 768px) {
      .container {
        max-width: 90%;
        padding: 15px;
      }
    }

    .navbar {
      background-color: var(--dark-background);
      text-align: center;
      padding: 20px 0;
    }

    .navbar ul {
      list-style: none;
      display: flex;
      justify-content: center;
      padding: 0;
    }

    .navbar li {
      margin: 0 20px;
    }

    .navbar a {
      text-decoration: none;
      color: #fff;
      font-weight: bold;
      transition: color 0.3s ease;
    }

    .navbar a:hover {
      color: var(--amber-red);
    }

    .product-box {
      background-color: var(--sage-green);
      color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.2s ease;
      margin-bottom: 20px;
    }

    .product-box:hover {
      transform: scale(1.05); /* Slightly enlarge on hover */
    }

    .product-box h2 {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .product-box p {
      font-size: 16px;
    }

    /* Style for price */
    .product-box .price {
      font-size: 20px;
      font-weight: bold;
    }

    /* Toast Notification */
    .toast {
      visibility: hidden;
      min-width: 250px;
      margin-left: -125px;
      background-color: var(--sage-green);
      color: #fff;
      text-align: center;
      border-radius: 2px;
      padding: 16px;
      position: fixed;
      z-index: 1;
      left: 50%;
      bottom: 30px;
      font-size: 17px;
    }

    .toast.show {
      visibility: visible;
      animation: fadein 0.5s, fadeout 0.5s 2.5s;
    }

    @keyframes fadein {
      from {
        bottom: 0;
        opacity: 0;
      }
      to {
        bottom: 30px;
        opacity: 1;
      }
    }

    @keyframes fadeout {
      from {
        bottom: 30px;
        opacity: 1;
      }
      to {
        bottom: 0;
        opacity: 0;
      }
    }
  </style>
</html>
